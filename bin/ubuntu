#!/bin/sh
exec qemu-system-x86_64 -enable-kvm \
     -cpu host \
     -drive file=$HOME/kvmimg/ubuntu.img,if=virtio \
     -m 1G \
     -display curses \
     -device virtio-net,netdev=vmnic -netdev user,id=vmnic \
     -net user,hostfwd=tcp::10022-:22 \
     -net nic \
     -name "ubuntu" \
     "$@"
